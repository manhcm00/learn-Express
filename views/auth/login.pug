extends ../layout/common.pug

block content
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/auth/login", method="POST")
        input(type="hidden", name="_csrf", value=csrfToken)
        label(for="email") Email
        input#email(type="email" name="email" class="form-control" value = values ? values.email : "")
        label(for="password") Password
        input#password(type="password" name="password" class="form-control" value = values ? values.password : "")
        button(class="btn btn-primary mt-3") login