extends ../layout/common.pug

block content
    h1 New tranfer

    form(action="/transfer/create", method="POST")
        input(type="hidden", name="_csrf", value=csrfToken)
        .form-group
            label(for="account") Account
            input#account.form-control(type="text" name="accountId")
        .form-group
            label(for="amount") Amount
            input#amount.form-control(type="number" name="amount")
        button(class="btn btn-primary mt-3") Transfer