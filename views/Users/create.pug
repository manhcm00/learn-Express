extends ../layout/common.pug

block content
    h1 Create user 
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/user/create", method="POST")
        label(for="name") Name
        input#name(type="text" name="name" class="form-control" value = values ? values.name : "")
        label(for="phone") Phone
        input#phone(type="number" name="phone" class="form-control" value = values ? values.phone : "")
        button(class="btn btn-primary mt-3") Create