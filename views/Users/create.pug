extends ../layout/common.pug

block content
    h1 Create user 
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/user/create", method="POST" enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text" name="name" class="form-control" value = values ? values.name : "")
        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="number" name="phone" class="form-control" value = values ? values.phone : "")
        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(type="file" name="avatar")
        button(class="btn btn-primary mt-3") Create