extends ../layout/common.pug

block content
    h1 Users :

    a.btn.btn-primary.mb-3(href="/user/create") new

    form.ml-auto.w-25(action="/user/search" class="d-flex")
        input(type="text" name="q" class="form-control")
        button(class="btn btn-primary") Search

    table.table
        tr 
            th Avatar
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td
                    img(src=user.avatar, alt="", width="32")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-primary(href="/user/" + user.id) View
    a(href="./") back